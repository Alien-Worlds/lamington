{
	"compilerOptions": {
		"rootDir": "packages",
		"baseUrl": ".",
		"target": "es2017",
		"lib": [
			"es2017",
			"dom"
		],
		"module": "commonjs",
		"allowJs": false,
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"allowUnreachableCode": false,
		"paths": {
			"*": ["@types/*"]
		},
		"noImplicitAny": true,
		"typeRoots": [
			"node_modules/@types",
			"@types"
		]
	}
}
