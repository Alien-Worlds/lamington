{
	"compilerOptions": {
		"baseUrl": "packages",
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"strict": true,
		"noImplicitAny": true,
		"lib": [
			"es6",
			"es2015",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types",
			"packages/@types"
		]
	},
	"include": [
        "packages"
    ],
	"exclude": [
		"node_modules",
		"**/__tests__/*",
		"*/**/*.test.ts"
	]
}
